# Database Configuration
DATABASE_URL=sqlite:///./app.db

# PostgreSQL Configuration (Production)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=fastapi_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=fastapi_ecommerce

# MongoDB Configuration (Optional)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=fastapi_app

# Database Pool Configuration
POOL_SIZE=10
MAX_OVERFLOW=20
POOL_TIMEOUT=30
POOL_RECYCLE=3600
ECHO_SQL=false

# JWT Configuration - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-generate-with-secrets.token_urlsafe-64
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "https://yourdomain.com"]

# Caching Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_DEFAULT_TTL=300
CACHE_PREFIX=fastapi_ecommerce

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Payment Provider Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# Image Processing Configuration
MAX_IMAGE_WIDTH=1920
MAX_IMAGE_HEIGHT=1080
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=300
JPEG_QUALITY=85
WEBP_QUALITY=80
PNG_COMPRESS_LEVEL=6
MAX_FILE_SIZE=10485760
TARGET_FILE_SIZE=1048576
OUTPUT_FORMAT=WEBP
FALLBACK_FORMAT=JPEG

# CDN Configuration (Optional)
CDN_ENABLED=false
CDN_BASE_URL=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=backend.log
LOG_FORMAT=json
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Security Configuration
BCRYPT_ROUNDS=12
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_EXTENSIONS=["jpg", "jpeg", "png", "gif", "webp", "heif", "heic"]

# Environment Configuration
ENVIRONMENT=development
DEBUG=true
TRUSTED_HOSTS=["localhost", "127.0.0.1", "*.yourdomain.com"]